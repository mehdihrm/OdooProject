<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        

    <!-- customer action-->

    <record model="ir.actions.act_window" id="society.action_window8">
      <field name="name">Society Customer Managing</field>
      <field name="res_model">society.customer</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="society_first_level_menu8" name="customer" parent="society.menu_root">
            <menuitem id="society_customer_menu_action" action="society.action_window8"/>
        </menuitem>
    <!-- customer list view display-->
    <record model="ir.ui.view" id="society.list_customer">
      <field name="name">society customer list</field>
      <field name="model">society.customer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="namespace"/>
          
        </tree>
      </field>
    </record>

    <!-- customer Search -->

      <record id="society.customer_view_search" model="ir.ui.view">
            <field name="name">society.customer.view.search</field>
            <field name="model">society.customer</field>
            <field name="arch" type="xml">
              <search string="customers">
                <field name="name" string="customer Name"/>
                <field name="phone_number" string="Phone Number"/>
                <filter string="Active"
                        name="active"
                        domain="[('active','=','True')]"
                        />


                <group expand="1" string="Group By">
                  <filter string="Birth Date" name="birth_date"
                  context="{'group_by':'birth_date','residual_visible':True}"/>
                </group>
                  
                    
              </search>
            </field>
          </record>

          <!-- form view customer-->
    <record id="society_customer_view_form" model="ir.ui.view">
      <field name="name">society.customer.view.form</field>
      <field name="model">society.customer</field>
      <field name="arch" type="xml">
        <form string="customer List">
            <sheet>
                    <group>
                        <group>
                            <field name="namespace"/>
                        </group>

                    </group>
    </sheet>
        </form>
      </field>
    </record>
        
    
    </data>
    

</odoo>
