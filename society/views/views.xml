<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- employee list view display-->

    <record model="ir.ui.view" id="society.list">
      <field name="name">society list</field>
      <field name="model">society.employee</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="departement"/>
          <field name="status"/>
        </tree>
      </field>
    </record>
    <!-- client list view display-->
    <record model="ir.ui.view" id="society.list_client">
      <field name="name">society client list</field>
      <field name="model">society.client</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="phone_number"/>
          <field name="birth_date"/>
          
        </tree>
      </field>
    </record>
    <!-- -->


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="society.action_window">
      <field name="name">Society Employee Managing</field>
      <field name="res_model">society.employee</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- client action-->

    <record model="ir.actions.act_window" id="society.action_window2">
      <field name="name">Society Client Managing</field>
      <field name="res_model">society.client</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- product action-->
     <record model="ir.actions.act_window" id="society.action_window3">
      <field name="name">Society Product Managing</field>
      <field name="res_model">society.product</field>
      <field name="view_mode">tree,form</field>
    </record>
    


    <!-- Search -->
    <!-- Employee Search -->

    <record id="society.employee_view_search" model="ir.ui.view">
      <field name="name">society.employee.view.search</field>
      <field name="model">society.employee</field>
      <field name="arch" type="xml">
        <search string="Employees">
          <field name="name" string="Employee Name"/>
          <field name="phone_number" string="Phone Number"/>

          <field name="departement" />
          <field name="adress" />  


          <filter string="Active"
                  name="active"
                  domain="[('active','=','True')]"
                  />


          <group expand="1" string="Group By">
            <filter string="Departement" name="departement"
            context="{'group_by':'departement','residual_visible':True}"/>
          </group>
            
              
        </search>
      </field>
    </record>
    <!-- Client Search -->

      <record id="society.client_view_search" model="ir.ui.view">
            <field name="name">society.client.view.search</field>
            <field name="model">society.client</field>
            <field name="arch" type="xml">
              <search string="Clients">
                <field name="name" string="Client Name"/>
                <field name="phone_number" string="Phone Number"/>
                <filter string="Active"
                        name="active"
                        domain="[('active','=','True')]"
                        />


                <group expand="1" string="Group By">
                  <filter string="Birth Date" name="birth_date"
                  context="{'group_by':'birth_date','residual_visible':True}"/>
                </group>
                  
                    
              </search>
            </field>
          </record>
           <!-- Client Search -->

      <record id="society.product_view_search" model="ir.ui.view">
            <field name="name">society.product.view.search</field>
            <field name="model">society.product</field>
            <field name="arch" type="xml">
              <search string="Products">
                <field name="name" string="Product Name"/>
                <field name="category" string="Category"/>
                <filter string="Active"
                        name="active"
                        domain="[('active','=','True')]"
                        />


                <group expand="1" string="Group By">
                  <filter string="Category" name="category"
                  context="{'group_by':'category','residual_visible':True}"/>
                </group>
                  
                    
              </search>
            </field>
          </record>

    <!-- form view-->
    <!-- form view employee-->

    <record id="society_employee_view_form" model="ir.ui.view">
      <field name="name">society.employee.view.form</field>
      <field name="model">society.employee</field>
      <field name="arch" type="xml">
        <form string="Employee List">
            <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="phone_number"/>
                        </group>
                        <group>
                            <field name="departement" class="mb16"/>
                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="salary"/>
                        </group>
                        <group>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender" widget="radio"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="Adress">
                                <field name="adress"/>
                            </page>
                        </notebook>
                    </group>
    </sheet>
        </form>
      </field>
    </record>

    <!-- form view client-->
    <record id="society_client_view_form" model="ir.ui.view">
      <field name="name">society.client.view.form</field>
      <field name="model">society.client</field>
      <field name="arch" type="xml">
        <form string="Client List">
            <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="phone_number"/>
                        </group> 
                        <group>
                            <field name="birth_date"/>
                        </group> 
                        <group>
                            <field name="active"/>
                        </group>                      
                        <notebook>
                            <page string="Adress">
                                <field name="adress"/>
                            </page>
                        </notebook>
                    </group>
    </sheet>
        </form>
      </field>
    </record>
    <!-- form view product-->
    <record id="society_product_view_form" model="ir.ui.view">
      <field name="name">society.product.view.form</field>
      <field name="model">society.product</field>
      <field name="arch" type="xml">
        <form string="Products List">
            <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="category"/>
                        </group> 
                        <group>
                            <field name="price"/>
                        </group> 
                        <group>
                            <field name="active"/>
                        </group>                                           
                    </group>
    </sheet>
        </form>
      </field>
    </record>




