    <!-- Top menu item -->

    <menuitem id="society.menu_root" name="society">
        <menuitem id="society_first_level_menu" name="Employee">
            <menuitem id="society_employee_menu_action" action="society.action_window"/>
        </menuitem>
        <menuitem id="society_first_level_menu2" name="Client">
            <menuitem id="society_client_menu_action" action="society.action_window2"/>
        </menuitem>
        <menuitem id="society_first_level_menu3" name="Product">
